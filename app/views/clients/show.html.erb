<%# filepath: app/views/clients/show.html.erb %>
<div class="client-detail-container" style="max-width:none;padding:2.5rem 1.5rem;">
  <h1><%= @client.last_name + @client.first_name %></h1>
  <div class="client-detail-card">
    <table class="client-detail-table">
      <tr><th>生年月日</th><td><%= @client.birthday.strftime('%Y年%m月%d日') if @client.birthday %></td></tr>
      <tr><th>メールアドレス</th><td><%= @client.email %></td></tr>
      <tr><th>郵便番号</th><td><%= @client.postal_code %></td></tr>
      <tr><th>住所</th><td><%= @client.address %></td></tr>
      <tr><th>電話番号</th><td><%= @client.phone_number %></td></tr>
      <tr><th>メモ</th><td><%= simple_format(@client.memo) %></td></tr>
      <tr><th>登録日</th><td><%= @client.created_at.strftime('%Y/%m/%d %H:%M') %></td></tr>
    </table>
    <div class="client-detail-actions">
      <%= link_to '一覧へ戻る', clients_path, class: 'btn btn-detail' %>
      <%= link_to '編集', edit_client_path(@client), class: 'btn btn-detail' %>
      <%= button_to '削除', client_path(@client), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
