<!-- サイドメニュー -->
<aside id="app-side-menu" class="side-menu" role="navigation" aria-hidden="true" data-sidebar-target="panel">
  <div class="side-menu-header">
    <div class="brand-title">cokarte</div>
  </div>
  <nav class="side-menu">
    <ul>
      <li>
        <%= link_to root_path, class: "side-menu-link #{controller_name == 'clients' ? 'active' : ''}" do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M16 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="1.8"/></svg></span>
          <span>顧客一覧</span>
        <% end %>
      </li>
      <li>
        <%= link_to client_records_path, class: "side-menu-link #{controller_name == 'client_records' && action_name == 'index' ? 'active' : ''}" do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3 5h18M3 12h18M3 19h18" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg></span>
          <span>カルテ一覧</span>
        <% end %>
      </li>
      <li>
        <%= link_to new_client_record_path, class: "side-menu-link #{controller_name == 'client_records' && action_name == 'new' ? 'active' : ''}" do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg></span>
          <span>カルテ作成</span>
        <% end %>
      </li>
      <li>
        <%= link_to user_profile_path, class: "side-menu-link #{controller_name == 'users' && action_name == 'show' ? 'active' : ''}" do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M20 21v-2a4 4 0 0 0-4-4h-8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="1.8"/></svg></span>
          <span>ユーザー情報</span>
        <% end %>
      </li>
      <li class="menu-divider" aria-hidden="true"></li>
      <li>
        <%= link_to pricing_path, class: 'side-menu-link' do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 1v22M4 5h16M4 12h16M4 19h16" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg></span>
          <span>料金プラン</span>
        <% end %>
      </li>
      <li>
        <%= link_to guide_path, class: 'side-menu-link' do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4 19V5a2 2 0 0 1 2-2h12v18H6a2 2 0 0 1-2-2Z" stroke="currentColor" stroke-width="1.8"/><path d="M6 7h10M6 11h8M6 15h6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg></span>
          <span>使い方</span>
        <% end %>
      </li>
      <li>
        <% two_fa_path = current_user&.otp_required_for_login ? two_factor_disable_form_path : two_factor_setup_path %>
        <%= link_to two_fa_path, class: 'side-menu-link' do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 1l3 5 6 .9-4.3 4.2 1 6-5.2-2.8L7.3 17l1-6L4 6.9 10 6l2-5Z" stroke="currentColor" stroke-width="1.4" fill="none"/></svg></span>
          <span>二要素認証</span>
        <% end %>
      </li>
      <li class="menu-divider" aria-hidden="true"></li>
      <li>
        <%= button_to destroy_user_session_path, method: :delete, class: 'side-menu-link logout-btn' do %>
          <span class="icon" aria-hidden="true"><svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/><path d="M12 21H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg></span>
          <span>ログアウト</span>
        <% end %>
      </li>
    </ul>
  </nav>
</aside>
