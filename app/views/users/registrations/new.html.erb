<div class="devise-container">
  <div class="devise-app-title" style="text-align:center; font-size:2rem; font-weight:bold; color:#218a5a; margin-bottom:2rem; letter-spacing:0.1em;">cokarte</div>
  <h2>新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :password, 'パスワード' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'パスワード（確認）' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :last_name, '姓' %>
      <%= f.text_field :last_name, autocomplete: "family-name" %>
    </div>
    <div class="field">
      <%= f.label :first_name, '名' %>
      <%= f.text_field :first_name, autocomplete: "given-name" %>
    </div>
    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
