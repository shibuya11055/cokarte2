<div class="devise-container">
  <h2>アカウント編集</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>確認待ちメールアドレス: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <%= f.label :first_name, '名' %>
      <%= f.text_field :first_name, autocomplete: "given-name" %>
    </div>
    <div class="field">
      <%= f.label :last_name, '姓' %>
      <%= f.text_field :last_name, autocomplete: "family-name" %>
    </div>
    <div class="field">
      <%= f.label :password, '新しいパスワード' %> <i>（変更しない場合は空欄）</i>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br /><em><%= @minimum_password_length %>文字以上</em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, '新しいパスワード（確認）' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :current_password, '現在のパスワード' %> <i>（変更時は必須）</i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>
  <h3>アカウント削除</h3>
  <div>
    <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger" %>
  </div>
  <%= link_to "戻る", root_path %>
</div>
