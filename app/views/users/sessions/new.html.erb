<div class="devise-container">
  <div style="text-align:center; margin-bottom: 1.6rem;">
    <% _logo_rendered = false %>
    <% ['cokarte_logo.png', 'cokarte-logo.png', 'cokarte-apple-touch-icon.png', 'cokarte-favicon.png'].each do |candidate| %>
      <% break if _logo_rendered %>
      <% begin %>
        <%= image_tag candidate, class: 'devise-app-logo', alt: 'cokarte' %>
        <% _logo_rendered = true %>
      <% rescue Propshaft::MissingAssetError %>
      <% end %>
    <% end %>
  </div>
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'ログイン状態を保持' %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
